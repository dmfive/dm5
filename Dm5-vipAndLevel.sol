contract VipAndLevel{
    
    mapping(address => uint8)   public VipAddrLevel;
    mapping(address => bool)    public Admin;
    mapping(address => address) public UserSuperior;
    mapping(address => bool)    public UserHasSetSuperior;
    
    event MainCoinFeeEvent(IERC20 MainToken_,address from,address to_,uint256 amount);
    
    modifier OnlyAdmin(address admin) {
        require(Admin[admin] ,"no auth!");
        _;
    }
    
    constructor(){
        Admin[msg.sender] = true;
    }
    
   function  MainCoinFee(IERC20 MainToken_,address from,address to_,uint256 amount)public OnlyAdmin(msg.sender){
        require(address(MainToken_) != address(0),"MainToken_ is not 0");
        MainToken_.transferFrom(from,to_,amount);
        emit MainCoinFeeEvent(MainToken_,from,to_,amount);
    }
    function setAdmin(address account) external OnlyAdmin(msg.sender) {
        Admin[account] = true;
    }
    
    function delAdmin(address account) external OnlyAdmin(msg.sender) {
        Admin[account] = false;
    }
    
    function setVipLevel(address user,uint8 level) external OnlyAdmin(msg.sender) {
        VipAddrLevel[user] = level;
    }

    function setVipesLevel(address[]memory addrs, uint8[] memory levels)external OnlyAdmin(msg.sender){
        require(addrs.length == levels.length,"arr length is equal!");
        for(uint i = 0; i < addrs.length; i++){
            VipAddrLevel[addrs[i]] = levels[i]; 
        }
    }
    
    function setUserSuperior(address superior) external{
        require(VipAddrLevel[superior] >= 1,"Low vip level");
        require(!UserHasSetSuperior[msg.sender],"You have set up a superior!");
        UserSuperior[msg.sender] = superior;
        UserHasSetSuperior[msg.sender] = true;
    }

